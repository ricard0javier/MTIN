<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme" />
    
    <style name="FragmentTitleText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="FragmentLoading" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    
    <style name="FragmentTitleContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/fragment_title_background</item>
        <item name="android:paddingTop">@dimen/fragment_title_line_size</item>
        <item name="android:paddingBottom">@dimen/fragment_title_line_size</item>
    </style>
    
</resources>