<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_title_container"
    android:orientation="horizontal"
    style="@style/FragmentTitleContainer">

    <TextView
        android:id="@+id/fragment_title_text"
        style="@style/FragmentTitleText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center|left"
        android:layout_marginLeft="8dp"
        android:gravity="center|left"
        android:text="Titulo del fragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|right"
        android:gravity="center|right" >

        <ProgressBar
            android:id="@+id/fragment_title_pb"
            style="@style/FragmentLoading"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>